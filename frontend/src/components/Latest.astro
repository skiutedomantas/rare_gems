---
import { Image } from "astro:assets";
import fetchApi from "../lib/strapi.js";

const gems = await fetchApi({
  endpoint: "rare-gems",
  query: { populate: "*" },
  wrappedByKey: "data",
});

const lastFiveGems = gems.slice(-5);
---

<style>
  .container {
    margin-left: 32rem;
    margin-bottom: 3rem;
    background-color: var(--color-champagne);
    width: 900px;
    padding: 1rem;
    border-radius: 10px;
  }
  .popular-container {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    margin-top: 1rem;
  }

  .gem-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    border-radius: 10px;
    width: 150px;
    text-align: center;
    font-size: var(--font-size-m);
  }

  .gem-image {
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 0.5rem;
  }

  h2 {
    font-weight: bold;
    font-size: var(--font-size-xl);
    margin-left: 2rem;
    margin-top: 1rem;
  }

  a {
    margin-left: 2rem;
    margin-top: 2rem;
  }

  .gem-name {
    margin-top: 0.5rem;
  }
</style>
<div class="container">
  <h2>Latest Gems added to the collection</h2>
  <div class="popular-container">
    {
      lastFiveGems.map((gem) => (
        <div class="gem-item">
          <Image
            class="gem-image"
            src={`http://localhost:1337${gem.GemImage.url}`}
            alt={`${gem.GemName} image`}
            width={100}
            height={100}
          />
          <div class="gem-name">{gem.GemName}</div>
        </div>
      ))
    }
  </div>
  <a href="/collection">Check out the collection</a>
</div>
